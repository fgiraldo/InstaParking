<%= simple_form_for @zone, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@zone[:description]) %>
  <%= f.input :active %>
  <%= error_span(@zone[:active]) %>
  <%= f.input :state_id %>
  <%= error_span(@zone[:state_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                zones_path, :class => 'btn btn-default' %>
<% end %>
