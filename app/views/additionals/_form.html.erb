<%= simple_form_for @additional, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :supply_id %>
  <%= error_span(@additional[:supply_id]) %>
  <%= f.input :description %>
  <%= error_span(@additional[:description]) %>
  <%= f.input :active %>
  <%= error_span(@additional[:active]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                additionals_path, :class => 'btn btn-default' %>
<% end %>
