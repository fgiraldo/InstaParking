<%= simple_form_for @vehicle_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@vehicle_type[:description]) %>
  <%= f.input :active %>
  <%= error_span(@vehicle_type[:active]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicle_types_path, :class => 'btn btn-default' %>
<% end %>
