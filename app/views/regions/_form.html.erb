<%= simple_form_for @region, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@region[:description]) %>
  <%= f.input :active %>
  <%= error_span(@region[:active]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                regions_path, :class => 'btn btn-default' %>
<% end %>
