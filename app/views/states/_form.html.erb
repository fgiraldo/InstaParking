<%= simple_form_for @state, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@state[:description]) %>
  <%= f.input :active %>
  <%= error_span(@state[:active]) %>
  <%= f.input :region_id %>
  <%= error_span(@state[:region_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                states_path, :class => 'btn btn-default' %>
<% end %>
