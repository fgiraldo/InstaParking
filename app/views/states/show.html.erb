<%- model_class = State -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @state.description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @state.active %></dd>

  <dt><strong><%= model_class.human_attribute_name(:region_id) %>:</strong></dt>
  <dd><%= @state.region.name %></dd>
</dl>

<%= link_to t('.back', :default => "Volver a lista"),
              states_path, :class => 'btn btn-info'  %>
<%= link_to t('.edit', :default => "Modificar"),
              edit_state_path(@state), :class => 'btn btn-info' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              state_path(@state),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-warning' %>
