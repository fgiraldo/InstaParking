<%= simple_form_for @parking_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@parking_type[:description]) %>
  <%= f.input :active %>
  <%= error_span(@parking_type[:active]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parking_types_path, :class => 'btn btn-default' %>
<% end %>
