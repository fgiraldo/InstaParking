<%- model_class = ParkingType -%>
<div class="page-header">
  <h2><%=t '.title', :default => "Tipo de Espacio" %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @parking_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @parking_type.active %></dd>
</dl>

<%= link_to t('.back', :default => "Volver a lista"),
              parking_types_path, :class => 'btn btn-info'  %>
<%= link_to t('.edit', :default => "Modificar"),
              edit_parking_type_path(@parking_type), :class => 'btn btn-info' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              parking_type_path(@parking_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro que desea eliminar?')) },
              :class => 'btn btn-warning' %>
